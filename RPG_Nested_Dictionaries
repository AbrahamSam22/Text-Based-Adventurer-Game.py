message = "You are on a Enemy Title (ET)tile. This is a location of an enemy. You must defeat the enemy to continue."
print(message)

message = "You are on a Boss Tile (BT)tile. This is a location of a Big Boss enemy. You may run away or fight the boss to continue."
print(message)

message = "You are on a Weapons Tile (WT)tile. This is a location of a weapon. You may pick up items or move to another location."
print(message)

message = "You are on a Supply Tile (ST)tile. This is a location of protection of healing itmes. You must pick up the weapon to continue."
print(message)

message = "You are on a Blank Tile (BT)tile. This is a location with no itmes. You may rest ot move to another location."
print(message)

print("\n")

# Inventory and Characteristics
# Make an empty list to store the inventories in.

# Make individual heroes, and store each one in the list.
# Wonder Woman
heroes = []

hero = {
    'description': 'extracts truth from people',
    'name': 'Lasso of Truth',
    'damage': '0',
    'protection': '5',
}
heroes.append(hero)

hero = {
    'description': 'bulletproof bracelets',
    'name': 'Bracelets of Submission',
    'damage': '100',
    'protection': '50',
}
heroes.append(hero)

hero = {
    'description': 'magically-empowered sword wielded',
    'name': 'Sword of Athena',
    'damage': '500',
    'protection': '0',
}
heroes.append(hero)

# Display information about each inventory.
for hero in heroes:
    print(f"Wonder Woman's Special Inventory{hero['name'].title()}:")
    for key, value in hero.items():
        print(f"\t{key}: {value}")
        
